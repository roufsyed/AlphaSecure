<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".email_ud"
    android:background="#EBEBEB">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/emailicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_email__1_"/>

        <RelativeLayout
            android:id="@+id/entries_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/emailicon">

            <EditText
                android:id="@+id/email_ud_title_et"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/primary_dark_blue"
                android:text="Email"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email_tv"
                android:layout_below="@+id/email_ud_title_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Id"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/email_ud_username_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_tv"
                android:layout_alignLeft="@id/email_tv"
                android:layout_alignParentEnd="true"
                android:hint="Email Id"/>
            <TextView
                android:id="@+id/emailpassword_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/email_ud_username_et"/>

            <EditText
                android:id="@+id/email_ud_password_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailpassword_tv"
                android:layout_alignLeft="@id/email_tv"
                android:layout_alignParentEnd="true"
                android:hint="Password"
                android:inputType="textPassword"/>

            <LinearLayout
                android:id="@+id/checkboxes_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_ud_password_et"
                android:layout_alignStart="@id/email_ud_password_et">

                <CheckBox
                    android:id="@+id/show_password_cb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Show Password"/>

            </LinearLayout>

            <TextView
                android:id="@+id/website_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website"
                android:layout_below="@id/checkboxes_ll"
                android:layout_alignLeft="@id/email_tv"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email_ud_website_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/website_tv"
                android:layout_alignLeft="@id/email_tv"
                android:layout_alignParentEnd="true"
                android:hint="Website"/>

            <TextView
                android:id="@+id/phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone no"
                android:layout_alignLeft="@id/email_tv"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@id/email_ud_website_et"/>

            <EditText
                android:id="@+id/email_ud_phone_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_tv"
                android:layout_alignLeft="@id/email_tv"
                android:layout_alignParentEnd="true"
                android:hint="Phone"
                android:inputType="number"/>

            <TextView
                android:id="@+id/emailnotes_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="notes"
                android:layout_alignLeft="@id/email_tv"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_below="@id/email_ud_phone_et"/>

            <EditText
                android:id="@+id/email_ud_notes_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailnotes_tv"
                android:layout_alignLeft="@id/email_tv"
                android:layout_alignParentEnd="true"
                android:hint="notes"/>
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>