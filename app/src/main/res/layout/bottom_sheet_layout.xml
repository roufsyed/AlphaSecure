<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/bottomsheetcontainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/bottom_sheet_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/title_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingLeft="2dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Select category"
                android:textSize="21dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/login_de_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_rl"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/login_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="3dp"
                android:src="@drawable/ic_login" />

            <TextView
                android:id="@+id/login_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/login_iv"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:text="Login"
                android:textColor="@color/black"
                android:textSize="21dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bank_de_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_rl"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/bank_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="3dp"
                android:src="@drawable/ic_bank" />

            <TextView
                android:id="@+id/bank_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/bank_iv"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:text="Bank"
                android:textColor="@color/black"
                android:textSize="21dp" />

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/email_de_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bank_rl"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/email_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="3dp"
            android:src="@drawable/ic_email__1_" />

        <TextView
            android:id="@+id/email_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/email_iv"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="21dp" />

    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/notes_de_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_rl"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/notes_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="3dp"
                android:src="@drawable/ic_notes" />

            <TextView
                android:id="@+id/notes_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/notes_iv"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:text="Notes"
                android:textColor="@color/black"
                android:textSize="21dp" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>

